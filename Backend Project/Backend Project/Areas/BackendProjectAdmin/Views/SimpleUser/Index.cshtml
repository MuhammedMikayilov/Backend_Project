@model AppUser
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Active Users</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Fullname
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Firstname @Model.Lastname</td>
                            <td>@Model.UserName</td>
                            <td>
                                <a asp-controller="SimpleUser" asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-outline-warning mb-2">
                                    Change Pass
                                </a>
                                <a asp-controller="SimpleUser" asp-action="UpdateUser" asp-route-id="@Model.Id" class="btn btn-outline-pinterest mb-2">
                                    Update
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

