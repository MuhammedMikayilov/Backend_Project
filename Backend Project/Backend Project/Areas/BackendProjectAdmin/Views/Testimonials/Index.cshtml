@model Testimonial
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Settings</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img width="150" src="~/img/testimonial/@Model.Image" /></td>
                <td><h4>@Html.Raw(Model.Fullname)</h4></td>
                <td>@Html.Raw(Model.Description)</td>
                <td>
                    <a asp-area="BackendProjectAdmin" asp-controller="Testimonials" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning mb-2">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>

            </tr>
        </tbody>
    </table>
</div>

