@model RegisterVM
@{
    ViewData["Title"] = "Create";
}

<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2 class="text-success">Sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form mt-5">
                            <form method="post" >
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="Firstname" placeholder="FirstName">
                                        <span asp-validation-for="Firstname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="Lastname" placeholder="Lastname">
                                        <span asp-validation-for="Lastname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="Username" placeholder="Username">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="Email" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="Password" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input class="form-control" asp-for="CheckPassword" placeholder="Confirm Password">
                                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-success">sign up</button>
                                    <a class="btn btn-outline-primary ml-3" asp-action="Index">Close</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<!-- Register end -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
