@model AppUser
@*@model UserVM*@
@{
    ViewData["Title"] = "UpdateUser";
}

<div class="container">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Firstname">Firstname</label>
                <input asp-for="@Model.Firstname" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Firstname"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Lastname">Lastname</label>
                <input asp-for="@Model.Lastname" class="form-control" placeholder="Password">
                <span  class="text-danger" asp-validation-for="Lastname"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.UserName">Username</label>
                <input asp-for="@Model.UserName" class="form-control" placeholder="Username">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary">Update</button>
        <a asp-action="Index" class="btn btn-outline-info">Close</a>
    </form>
</div>

