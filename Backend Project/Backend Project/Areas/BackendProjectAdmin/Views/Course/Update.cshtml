@model Course
@{
    ViewData["Title"] = "Update";
}

<div class="container bg-white p-5">
    <div class="row">
        <div class="col-md-12 ">
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-8 offset-md-2 mb-3">
                    <img src="~/img/course/@Model.Image" alt="Alternate Text" />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.CourseName">Name</label>
                        <input asp-for="@Model.CourseName" class="form-control" placeholder="Name">
                        <span asp-validation-for="CourseName"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.CourseDescription">Aboute Description</label>
                        <textarea asp-for="@Model.CourseDescription"> </textarea>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.CourseDetail.AboutCourseDescription">Aboute Description</label>
                        <textarea asp-for="@Model.CourseDetail.AboutCourseDescription"> </textarea>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.CourseDetail.HowToApplyExplaining">How to Apply Description</label>
                        <textarea asp-for="@Model.CourseDetail.HowToApplyExplaining"> </textarea>
                    </div>
                    <div class="form-group col-md-8 offset-md-2">
                        <label asp-for="@Model.CourseDetail.CertificationExplain">Certification Description</label>
                        <textarea asp-for="@Model.CourseDetail.CertificationExplain"> </textarea>
                    </div>
                </div>

                <div class="text-center">
                    <h3>Change Image</h3>
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input asp-for="@Model.Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>
                </div>

                <div class="text-center">
                    <h3>Course Features</h3>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="@Model.CourseDetail.Starts"></label>
                            <input asp-for="@Model.CourseDetail.Starts" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.Starts"></span>
                        </div>
                        <div class="col-md-6 form-row">

                            <div class="form-group col-md-6">
                                <label asp-for="@Model.CourseDetail.Duration"></label>
                                <input asp-for="@Model.CourseDetail.Duration" class="form-control">
                                <span class="text-danger" asp-validation-for="@Model.CourseDetail.Duration"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.CourseDetail.ClassDuration"></label>
                                <input asp-for="@Model.CourseDetail.ClassDuration" class="form-control">
                                <span class="text-danger" asp-validation-for="@Model.CourseDetail.ClassDuration"></span>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="@Model.CourseDetail.SkillLevel"></label>
                            <input asp-for="@Model.CourseDetail.SkillLevel" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.SkillLevel"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="@Model.CourseDetail.Language"></label>
                            <input asp-for="@Model.CourseDetail.Language" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.Language"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="@Model.CourseDetail.StudentsCount"></label>
                            <input asp-for="@Model.CourseDetail.StudentsCount" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.StudentsCount"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="@Model.CourseDetail.Assesments"></label>
                            <input asp-for="@Model.CourseDetail.Assesments" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.Assesments"></span>
                        </div>
                        <div class="form-group col-md-6 offset-md-3">
                            <label asp-for="@Model.CourseDetail.CoursePrice"></label>
                            <input asp-for="@Model.CourseDetail.CoursePrice" class="form-control">
                            <span class="text-danger" asp-validation-for="@Model.CourseDetail.CoursePrice"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Index" class="btn btn-info">Close</a>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#CourseDescription'))
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#CourseDetail_AboutCourseDescription'))
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#CourseDetail_HowToApplyExplaining'))
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#CourseDetail_CertificationExplain'))
        .catch(error => {
            console.error(error);
        });

</script>

