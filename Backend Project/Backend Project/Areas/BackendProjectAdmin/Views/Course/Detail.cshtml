@model Course
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <table class="table table-striped table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Course name</th>
                <th scope="col">Duration</th>
                <th scope="col">Class duration</th>
                <th scope="col">Price</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img style="width:150px!important; height:150px!important; border-radius:8px!important" src="~/img/course/@Model.Image" alt="@Model.Image" /></td>
                <td>@Model.CourseName</td>
                <td>@Model.CourseDetail.Duration Month</td>
                <td>@Model.CourseDetail.ClassDuration hours</td>
                <td>@Model.CourseDetail.CoursePrice$</td>
            </tr>
        </tbody>
    </table>


    <table class="table table-striped table-dark mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Categories</th>
                <th scope="col">Tags</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <ol>
                        @foreach (CategoryCourse categories in Model.CategoryCourses)
                        {
                            <li class="text-white">@categories.Categories.NameCategory</li>
                        }
                    </ol>
                </td>
                <td>
                    <ol class="text-center">
                        @foreach (TagCourse tags in Model.TagCourses)
                        {
                            <li class="text-white">@tags.Tags.TagName</li>
                        }
                    </ol>
                </td>  
            </tr>
        </tbody>
    </table>



    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-success">Go back</a>
    </div>
</div>