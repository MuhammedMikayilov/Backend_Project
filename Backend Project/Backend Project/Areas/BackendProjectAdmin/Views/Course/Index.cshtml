@model List<Course>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">Courses</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>
                                Course Image
                            </th>
                            <th>
                                Course Name
                            </th>
                            <th>
                                Course description
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Course course in Model)
                        {
                            <tr>
                                <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/course/@course.Image" /></td>
                                <td>@course.CourseName</td>
                                <td>@Html.Raw(course.CourseDescription)</td>
                                <td>@course.CourseDetail.CoursePrice $</td>
                                <td>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id" class="btn btn-success mb-2">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Course" asp-action="Update" asp-route-id="@course.Id" class="btn btn-warning mb-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-pinterest mb-2">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
