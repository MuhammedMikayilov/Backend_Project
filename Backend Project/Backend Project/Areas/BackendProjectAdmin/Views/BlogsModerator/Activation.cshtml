@model AppUser
@{
    ViewData["Title"] = "Activation";
}

<div class="container">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Username</th>
                <th>Email</th>
                <th>Activation</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Firstname @Model.Lastname</td>
                <td>@Model.UserName</td>
                <td>@Model.Email</td>
                @if (Model.isDelete)
                {
                    <td><h6 style="color: red;">Deactive</h6></td>
                }
                else
                {
                    <td><h6 style="color: lightgreen;">Active</h6></td>
                }
            </tr>
        </tbody>
    </table>
    <div class="mt-4 text-center">
        <form method="post" class="text-center">
            @if (Model.isDelete)
            {
                <button type="submit" class="btn btn-success">Active</button>
            }
            else
            {
                <button type="submit" class="btn btn-danger">Deactive</button>
            }
            <a asp-action="Index" class="btn btn-dark ml-3">Go Back</a>
        </form>
    </div>
</div>

