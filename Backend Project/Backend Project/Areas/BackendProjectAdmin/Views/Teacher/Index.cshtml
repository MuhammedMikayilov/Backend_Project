@model List<Teachers>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">teachers</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>
                                Teacher Image
                            </th>
                            <th>
                                Teacher Name
                            </th>
                            <th>
                                Teacher speciality
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Teachers teacher in Model)
                        {
                            <tr>
                                <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/teacher/@teacher.Image" /></td>
                                <td>@teacher.Fullname</td>
                                <td>@Html.Raw(teacher.Speciality)</td>
                                <td>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Teacher" asp-action="Detail" asp-route-id="@teacher.Id" class="btn btn-success mb-2">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Teacher" asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning mb-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-pinterest mb-2">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

