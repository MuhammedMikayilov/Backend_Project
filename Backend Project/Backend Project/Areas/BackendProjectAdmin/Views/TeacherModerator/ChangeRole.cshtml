@model UserVM
@{
    ViewData["Title"] = "ChangeRole";
}

<div class="container bg-white pb-5">
    <div class="row w-100">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Username</th>
                    <th>Emain</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Lastname</td>
                    <td>@Model.Username</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row mt-3 p-5">
        <div class="col-md-8">
            <h3>Roles</h3> <br />
            <form method="post">
                @foreach (string item in Model.Roles)
                {
                    if (item == Model.Role)
                    {
                        <input type="radio" name="Role" checked value="@item" />@item <br /> <br />
                    }
                    else
                    {
                        <input type="radio" name="Role" value="@item" />@item <br /> <br />
                    }
                }
                <br /> <br />
                <button type="submit" class="btn btn-primary ml-2">Change Role</button>
                <a asp-action="Index" class="btn btn-dark">Go back</a>
            </form>
        </div>
    </div>
</div>
