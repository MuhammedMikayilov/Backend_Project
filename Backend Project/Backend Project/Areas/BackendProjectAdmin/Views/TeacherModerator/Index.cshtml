
@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course Moderators</h4>
            <div class="">
                <a asp-area="BackendProjectAdmin" asp-controller="TeacherModerator" asp-action="Create" class="btn btn-success">Create Moderator</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Fullname
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Activation
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserVM user in Model)
                        {
                            if (user.Role == "TeacherModerator")
                            {
                                <tr>
                                    <td>@user.Name @user.Lastname</td>
                                    <td>@user.Username</td>
                                    <td style="color:green">
                                        Active
                                    </td>
                                    <td>
                                        @if (user.Username != User.Identity.Name)
                                        {
                                            <a asp-controller="TeacherModerator" asp-action="Activation" asp-route-id="@user.Id" class="btn btn-outline-danger mb-2">
                                                Deactivate
                                            </a>
                                        }

                                        @if (user.Username == User.Identity.Name)
                                        {
                                            <br />
                                            <a asp-controller="TeacherModerator" asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-outline-warning mb-2">
                                                Change Pass
                                            </a>
                                            <a asp-controller="TeacherModerator" asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-outline-pinterest mb-2">
                                                Update
                                            </a>
                                        }

                                        @if (user.Username != User.Identity.Name)
                                        {
                                            <a asp-controller="TeacherModerator" asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-outline-info mb-2">
                                                Change Role
                                            </a>
                                            <a asp-controller="TeacherModerator" asp-action="Detail" asp-route-id="@user.Id" class="btn btn-outline-warning mb-2">
                                                Detail
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


