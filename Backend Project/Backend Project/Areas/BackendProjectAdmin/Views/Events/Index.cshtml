@model List<Event>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-behance">events</h2>
            <a asp-action="Create" class="btn btn-success mb-5">Create</a>

            <div class="table-responsive">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>
                                Event Image
                            </th>
                            <th>
                                Event Name
                            </th>
                            @*<th>
                                Event Speakers
                            </th>*@
                            <th>
                                Time
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Event events in Model)
                        {
                            <tr>
                                <td><img style="width: 150px; height: 150px; border-radius: 8px!important" src="~/img/event/@events.Image" /></td>
                                <td>@events.Title</td>
                                @*<td>
                                    <ol>
                                        @foreach (Speakers speaker in events.EventDetails.Speakers)
                                        {
                                            <li>@speaker.SpeakerName</li>
                                        }
                                    </ol>
                                </td>*@
                                <td>@events.EventDate</td>
                                <td>
                                    <a asp-area="BackendProjectAdmin" asp-controller="Events" asp-action="Detail" asp-route-id="@events.Id" class="btn btn-success mb-2">
                                        <i class="fas fa-info-circle"></i>
                                    </a> <br />
                                    <a asp-area="BackendProjectAdmin" asp-controller="Events" asp-action="Update" asp-route-id="@events.Id" class="btn btn-warning mb-2"> 
                                        <i class="fas fa-edit"></i>
                                    </a> <br />
                                    <a asp-area="BackendProjectAdmin" asp-controller="Events" asp-action="Delete" asp-route-id="@events.Id" class="btn btn-pinterest mb-2"> 
                                        <i class="fas fa-trash"></i>
                                    </a> <br />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
