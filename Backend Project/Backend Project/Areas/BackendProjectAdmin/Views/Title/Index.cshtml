@model List<Titles>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Titles</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Title Icon
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Titles title in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/icon/@title.Icon" style="width:60px!important" />
                                </td>
                                <td>
                                    @if (title.IsDelete)
                                    {
                                        <p class="disabled text-muted">@title.Title</p>
                                    }
                                    else
                                    {
                                        <p>@title.Title</p>
                                    }

                                </td>
                                <td>
                                    @if (!title.IsDelete)
                                    {
                                        <a asp-controller="Title" asp-action="Update" asp-route-id="@title.Id" class="btn btn-outline-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>

                                        <a asp-controller="Title" asp-action="Delete" asp-route-id="@title.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Title" asp-action="Update" asp-route-id="@title.Id" class="btn btn-outline-warning disabled">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>

                                        <a asp-controller="Title" asp-action="Delete" asp-route-id="@title.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-eye-slash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

