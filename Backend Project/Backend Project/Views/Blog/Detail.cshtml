@model BlogVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container" style="overflow-x:hidden">
    <!-- Banner Area Start -->
    <div class="banner-area-wrapper">
        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>blog details</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Area End -->
    <!-- Blog Start -->
    <div class="blog-details-area pt-150 pb-140">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="blog-details">
                        <div class="blog-details-img">
                            <img width="750" src="~/img/blog/@Model.Blog.Image" alt="blog-details">
                        </div>
                        <div class="blog-details-content">
                            <h2>@Model.Blog.Title </h2>
                            <h6>By @Model.Blog.Author  /  @Model.Blog.DateWrite.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i> @Model.Blog.CommentCount</h6>
                            <p>@Html.Raw(Model.Blog.BlogDetail.Description)</p>
                        </div>
                        @await Component.InvokeAsync("SendMessage")
                        
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="blog-sidebar right">
                        @await Component.InvokeAsync("Sidebar")
                        <div class="single-blog-widget">
                            <h3>tags</h3>
                            <div class="single-tag">
                                @foreach (TagToBlog tag in Model.Blog.TagToBlogs)
                                {
                                    <a asp-action="Index" class="mr-10 mb-10">@tag.Tags.TagName</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
