@model IEnumerable<Course>
@{
    ViewData["Title"] = "_SearchCoursePartial";
}

@foreach (Course course in Model)
{
    <div data-id="@course.CourseName" class="col-md-4 col-sm-6 col-xs-12 my searching">
        <div class="single-course">
            <div class="course-img">
                <a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">
                    <img src="~/img/course/@course.Image" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">@course.CourseName</a></h3>
                <p>@Html.Raw(course.CourseDescription)</p>
                <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">read more</a>
            </div>
        </div>
    </div>
}

