@model CourseVM
@{
    ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img width="750" src="~/img/course/@Model.Course.Image" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Course.CourseName</h2>
                        @Html.Raw(Model.Course.CourseDescription)
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                @Html.Raw(Model.Course.CourseDetail.AboutCourseDescription)
                            </div>
                            <div class="single-course-left">
                                @if (Model.Course.CourseDetail.HowToApplyExplaining != null)
                                {
                                    <h3>how to apply</h3>
                                    @Html.Raw(Model.Course.CourseDetail.HowToApplyExplaining)
                                }
                            </div>
                            <div class="single-course-left">
                                @if (Model.Course.CourseDetail.CertificationExplain != null)
                                {
                                    <h3>certification</h3>
                                    @Html.Raw(Model.Course.CourseDetail.CertificationExplain)
                                }
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.Course.CourseDetail.Starts.ToString("dd MMMM yyyy")</span></li>
                                <li>duration <span>@Model.Course.CourseDetail.Duration Month</span></li>
                                <li>class duration <span>@Model.Course.CourseDetail.ClassDuration hours</span></li>
                                <li>skill level <span>@Model.Course.CourseDetail.SkillLevel</span></li>
                                <li>language <span>@Model.Course.CourseDetail.Language</span></li>
                                <li>students <span>@Model.Course.CourseDetail.StudentsCount</span></li>
                                <li>assesments <span>@Model.Course.CourseDetail.Assesments</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.Course.CourseDetail.CoursePrice</h3>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name = "receiver" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" asp-controller="Course" asp-action="SendEmail" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (Categories ctr in Model.Categories)
                            {
                                <li><a href="#">@ctr.NameCategory (0) <!--will be course's count--></a></li>
                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>

                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @await Component.InvokeAsync("LatestBlog")
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (TagCourse tag in Model.Course.TagCourses)
                            {
                                <a asp-action="Index" class="mr-10 mb-10">@tag.Tags.TagName</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
